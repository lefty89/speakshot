<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hsfl.speakshot.MainActivity">

    <ImageView
        android:layout_width="@dimen/mode_icon_size"
        android:layout_height="@dimen/mode_icon_size"
        android:layout_gravity="top|start"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />
    <FrameLayout
            android:layout_width="@dimen/fab_frame_size"
            android:layout_height="@dimen/fab_frame_size"
            android:layout_gravity="bottom|center">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_main_margin"
            app:srcCompat="@drawable/ic_folder_black_24dp" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="@dimen/fab_frame_size"
        android:layout_height="@dimen/fab_frame_size"
        android:layout_gravity="bottom|start">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_show_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_main_margin"
            app:srcCompat="@drawable/buttons_read_result" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="@dimen/fab_frame_size"
        android:layout_height="@dimen/fab_frame_size"
        android:layout_gravity="bottom|end">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_light_toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_main_margin"
            android:enabled="false"
            app:srcCompat="@drawable/buttons_switch_light" />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>