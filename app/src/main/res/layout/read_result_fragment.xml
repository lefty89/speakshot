<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_light_focused"
        android:weightSum="1">

    <TextView
        android:text="Section 0/0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_sections_header"
        android:padding="10dp"
        android:layout_weight="0.01"
        android:textStyle="bold"
        android:background="@drawable/sections_header"/>

    <TextView
        android:id="@+id/txt_sections_result"
        android:text="No sections found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="0.99" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_fragment_prev" android:layout_weight="1"/>
        <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_fragment_play" android:layout_weight="1"/>
        <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_fragment_next" android:layout_weight="1"/>
        <Button
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/read_fragment_close" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>







