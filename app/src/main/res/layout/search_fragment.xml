<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hsfl.speakshot.MainActivity">

    <ImageView
        android:layout_width="@dimen/mode_icon_size"
        android:layout_height="@dimen/mode_icon_size"
        android:layout_gravity="left|center_horizontal"
        app:srcCompat="@drawable/ic_search_black_24dp"
        android:tint="@color/colorModeIcon" />
    <FrameLayout
        android:layout_width="@dimen/fab_frame_size"
        android:layout_height="@dimen/fab_frame_size"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_light_toggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:enabled="false"
            app:srcCompat="@drawable/ic_flash_on_black_24dp"
            android:tint="@color/colorDarkThemePrimary"/>
    </FrameLayout>
    <Button
            android:text="To read mode"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_send_to_read"
            android:layout_weight="1"/>

</android.support.design.widget.CoordinatorLayout>







