<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hsfl.speakshot.MainActivity">

    <com.hsfl.speakshot.ui.views.CameraPreviewSurface
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|end">
        <FrameLayout
            android:layout_width="@dimen/fab_frame_size"
            android:layout_height="@dimen/fab_frame_size"
            android:layout_centerHorizontal="true">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|end"
                android:layout_margin="@dimen/fab_main_margin"
                app:srcCompat="@drawable/ic_settings_black_24dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/fab_frame_size"
            android:layout_height="@dimen/fab_frame_size"
            android:layout_centerHorizontal="true">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_guided"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|end"
                android:layout_margin="@dimen/fab_main_margin"
                app:srcCompat="@drawable/buttons_switch_guide" />
        </FrameLayout>
        <!-- send to read and light switch -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal">
                <FrameLayout
                    android:layout_width="@dimen/fab_frame_size"
                    android:layout_height="@dimen/fab_frame_size"
                    android:layout_gravity="bottom|left">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btn_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/fab_main_margin"
                        app:srcCompat="@drawable/ic_analyze" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="@dimen/fab_frame_size"
                    android:layout_height="@dimen/fab_frame_size"
                    android:layout_gravity="bottom|end">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/btn_light_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/fab_main_margin"
                        android:enabled="false"
                        app:srcCompat="@drawable/buttons_switch_light" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>