    <!-- guiding directions -->
    <string-array name="guiding_direction">
        <item></item>                               <!-- 0000 -->
        <item>weiter links bewegen</item>           <!-- 0001 : left -->
        <item>weiter oben bewegen</item>            <!-- 0010 : top -->
