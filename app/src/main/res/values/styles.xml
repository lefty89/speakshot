<resources>

    <!-- Base application theme. -->
    <style name="ThemeLightReadMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/lightBlue</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="ThemeLightSearchMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/lightPurple</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ThemeDarkReadMode" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:tint">@color/lightBlue</item>
    </style>
    <style name="ThemeDarkSearchMode" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/darkPurple</item>
        <item name="android:tint">@color/lightPurple</item>
    </style>

</resources>
